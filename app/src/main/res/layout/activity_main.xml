<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tela1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF1215D2"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bt_bares"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/bares"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/bt_restaurante"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:text="@string/restaurantes"
        app:layout_constraintTop_toBottomOf="@+id/bt_bares"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/bt_turismo"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:text="@string/turismo"
        app:layout_constraintTop_toBottomOf="@+id/bt_restaurante"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/bt_hotel"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:text="@string/hot_is"
        app:layout_constraintTop_toBottomOf="@+id/bt_turismo"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/img_nassau"
        android:layout_width="0dp"
        android:layout_height="257dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/bt_hotel"
        app:srcCompat="@drawable/nassau2"
        tools:layout_editor_absoluteX="0dp" />


</android.support.constraint.ConstraintLayout>