<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@color/colorPrimary"
    tools:context=".bar">

    <Button
        android:id="@+id/img_4"
        style="@android:style/DeviceDefault.ButtonBar"
        android:layout_width="112dp"
        android:layout_height="92dp"
        android:padding="16dp"
        android:background="@drawable/nassau"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_3"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

             <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:padding="10dp"

                android:text="@string/localiza_o"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textColor="#ffff"
                app:layout_constraintEnd_toEndOf="@+id/img_1"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/img_1"
                app:layout_constraintTop_toBottomOf="@+id/img_1" />

             <TextView
                android:id="@+id/textView4"

                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:padding="10dp"
                android:text="Agenda"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textColor="#ffff"
                app:layout_constraintEnd_toEndOf="@+id/img_4"
                app:layout_constraintHorizontal_bias="0.507"
                app:layout_constraintStart_toStartOf="@+id/img_4"
                app:layout_constraintTop_toBottomOf="@+id/img_4" />

    <Button
        android:id="@+id/img_3"
        style="@android:style/DeviceDefault.ButtonBar"
        android:layout_width="112dp"
        android:layout_height="92dp"
        android:padding="16dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/nassau"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toStartOf="@+id/img_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView1" />

    <Button
        android:id="@+id/img_1"
        style="@android:style/DeviceDefault.ButtonBar"
        android:layout_width="112dp"
        android:layout_height="92dp"
        android:padding="16dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/nassau"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/textView1"
        app:layout_constraintEnd_toStartOf="@+id/img_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="CARDÃPIO"
                android:padding="16dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textColor="#ffff"
                app:layout_constraintEnd_toEndOf="@+id/img_3"
                app:layout_constraintHorizontal_bias="0.49"
                app:layout_constraintStart_toStartOf="@+id/img_3"
                app:layout_constraintTop_toBottomOf="@+id/img_3" />

    <Button
        android:id="@+id/img_2"
        style="@android:style/DeviceDefault.ButtonBar"
        android:layout_width="112dp"
        android:layout_height="92dp"
        android:padding="16dp"
        android:background="@drawable/nassau"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_1"
        app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"

                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:padding="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textColor="#ffff"
                android:text="Fotos"
                app:layout_constraintEnd_toEndOf="@+id/img_2"
                app:layout_constraintStart_toStartOf="@+id/img_2"
                app:layout_constraintTop_toBottomOf="@+id/img_2" />

            <ImageView
                android:id="@+id/img_nassau"
                android:layout_width="0dp"
                android:layout_height="260dp"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/textView4"
                app:srcCompat="@drawable/nassau2"
                tools:layout_editor_absoluteX="0dp" />


</android.support.constraint.ConstraintLayout>